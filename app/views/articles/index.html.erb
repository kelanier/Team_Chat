<div id="content">
  <%= form_for :article do |f| %>
    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </p>

    <p>
      <%= f.label :text %><br>
      <%= f.text_area :text %>
    </p>

    <p>
      <%= f.submit %>
    </p>
  <% end %>

  <h1>Team-Chat</h1>

  <table>
    <thead>
      <tr>
        <th>Date/Time</th>
        <th>Delete</th>
        <th>Open</th>
        <th>Title</th>
      </tr>
    </thead>

    <tbody>
      <% @articles.reverse.each do |article| %>
        <tr>
          <td><%= article.created_at.in_time_zone('Central Time (US & Canada)') %></td>
          <td align="center"><%= link_to '[X]', article, confirm: 'Are you sure?', :method => :delete %></td>
          <td align="center"><%= link_to '(O)', article_path(article) %></td>
          <td align="center"><%= article.title %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
